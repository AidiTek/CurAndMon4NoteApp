<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E0C0C"
    android:orientation="vertical"
    tools:context=".ui.fragments.note.NoteDitailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0E0C0C"
        android:paddingBottom="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_arrowBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_timeMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="12dp"
            android:text="35 Мая"
            android:textColor="#E6E6E6"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/img_arrowBack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_timeHourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:text="17:21"
            android:textColor="#B1B1B1"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/tv_timeMonth"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_saved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Готово"
            android:textColor="#D88B02"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="64dp"
        android:background="@android:color/transparent"
        android:hint="Загаловок"
        android:textColor="#B1B1B1"
        android:textColorHint="#B1B1B1"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="92dp"
        android:background="@android:color/transparent"
        android:hint="Описание"
        android:textColor="#B1B1B1"
        android:textColorHint="#B1B1B1"
        android:textSize="16sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/colorContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="20dp">

        <!-- Черный цвет -->
        <FrameLayout
            android:id="@+id/blackContainer"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_view_black"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@+id/blackIndicator"
            app:layout_constraintStart_toStartOf="parent">

        </FrameLayout>

        <View
            android:id="@+id/blackIndicator"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="#D88B02"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/blackContainer"
            app:layout_constraintStart_toStartOf="@+id/blackContainer" />

        <!-- Белый цвет -->
        <FrameLayout
            android:id="@+id/whiteContainer"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_view_white"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@+id/whiteIndicator"
            app:layout_constraintEnd_toStartOf="@+id/redContainer"
            app:layout_constraintStart_toEndOf="@+id/blackContainer">

        </FrameLayout>

        <View
            android:id="@+id/whiteIndicator"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="#D88B02"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/whiteContainer"
            app:layout_constraintStart_toStartOf="@+id/whiteContainer" />

        <!-- Красный цвет -->
        <FrameLayout
            android:id="@+id/redContainer"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_view_red"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@+id/redIndicator"
            app:layout_constraintEnd_toEndOf="parent">

        </FrameLayout>

        <View
            android:id="@+id/redIndicator"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="#D88B02"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/redContainer"
            app:layout_constraintStart_toStartOf="@+id/redContainer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
